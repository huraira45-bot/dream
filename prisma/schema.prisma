generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Business {
  id         String          @id @default(cuid())
  name       String
  slug       String          @unique
  region     String?         // e.g., "Pakistan", "USA", "UK"
  logoUrl    String?         // Branding Logo
  primaryColor   String?     // Primary Hex
  secondaryColor String?     // Secondary Hex
  accentColor    String?     // Accent Hex (Optional)
  canvaTemplateId String?    // Optional Canva Template for Autofill
  createdAt  DateTime        @default(now())
  reels      GeneratedReel[]
  mediaItems MediaItem[]
}

enum ReelType {
  REEL
  POST
}

model MediaItem {
  id         String   @id @default(cuid())
  businessId String
  type       String
  url        String
  createdAt  DateTime @default(now())
  processed  Boolean  @default(false)
  business   Business @relation(fields: [businessId], references: [id])
}

enum ReelStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  DISCARDED
}

model GeneratedReel {
  id             String    @id @default(cuid())
  businessId     String
  business       Business  @relation(fields: [businessId], references: [id])
  url            String
  type           ReelType  @default(REEL)
  status         ReelStatus @default(DRAFT)
  scheduledAt    DateTime?
  title          String?
  caption        String?
  musicUrl       String? // The internal royalty-free track
  trendingAudioTip String? // The suggested real-world IG song
  mediaItemIds   String[]  @default([])
  createdAt      DateTime  @default(now())
}
model MusicTrend {
  id        String   @id @default(cuid())
  region    String
  songTitle String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([region, songTitle])
}

model EventCalendar {
  id               String   @id @default(cuid())
  title            String
  date             DateTime
  category         String   // e.g., "National", "Religious", "Sports", "Trend"
  suggestionPrompt String   // Context for the AI when generating a post
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
}
