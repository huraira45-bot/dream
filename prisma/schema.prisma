generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Business {
  id         String          @id @default(cuid())
  name       String
  slug       String          @unique
  region     String?         // e.g., "Pakistan", "USA", "UK"
  logoUrl    String?         // Branding Logo
  primaryColor   String?     // Primary Hex
  secondaryColor String?     // Secondary Hex
  accentColor    String?     // Accent Hex (Optional)
  canvaTemplateId String?    // Optional Canva Template for Autofill
  canvaAccessToken String?   // OAuth Access Token
  canvaRefreshToken String?  // OAuth Refresh Token
  referencePosts    String[]  @default([]) // 3 Reference "Likes" (URLs)
  styleContext      String?   // JSON/String containing the Gemini-extracted Style DNA
  createdAt  DateTime        @default(now())
  reels      GeneratedReel[]
  mediaItems MediaItem[]
}

enum ReelType {
  REEL
  POST
}

model MediaItem {
  id         String   @id @default(cuid())
  businessId String
  type       String
  url        String
  createdAt  DateTime @default(now())
  processed  Boolean  @default(false)
  business   Business @relation(fields: [businessId], references: [id])
}

enum ReelStatus {
  DRAFT
  SCHEDULED
  PUBLISHED
  DISCARDED
}

model GeneratedReel {
  id             String    @id @default(cuid())
  businessId     String
  business       Business  @relation(fields: [businessId], references: [id])
  url            String
  type           ReelType  @default(REEL)
  status         ReelStatus @default(DRAFT)
  scheduledAt    DateTime?
  title          String?
  caption        String?
  musicUrl       String? 
  trendingAudioTip String?
  mediaItemIds   String[]  @default([])
  feedbackScore  Float?     // 1.0 for like, -1.0 for dislike
  dislikeCategory String?    // "Hook", "Visuals", "Music", "Branding"
  dislikeReason   String?    // Text explanation
  traceId        String?    // Link to Agent Spans
  createdAt      DateTime  @default(now())
}

model AgentLightningSpan {
  id          String   @id @default(cuid())
  traceId     String   // Groups multiple spans
  agentName   String   // e.g. "Harsh Critic"
  input       String?  // JSON
  output      String?  // JSON
  promptUsed  String?  // Actual prompt
  reward      Float?   // Set by user feedback later
  startTime   DateTime @default(now())
  endTime     DateTime?
}
model MusicTrend {
  id        String   @id @default(cuid())
  region    String
  songTitle String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([region, songTitle])
}

model EventCalendar {
  id               String   @id @default(cuid())
  title            String
  date             DateTime
  category         String   // e.g., "National", "Religious", "Sports", "Trend"
  suggestionPrompt String   // Context for the AI when generating a post
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
}

model GlobalSetting {
  id                String   @id @default("platform-settings")
  canvaAccessToken  String?
  canvaRefreshToken String?
  canvaTokenExpiresAt DateTime?
  updatedAt         DateTime @updatedAt
}
